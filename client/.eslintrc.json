{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
  "rules": {
    "plugin:react/jsx-runtime": "extends",
    "import/no-extraneous-dependencies": ["error", { "devdependencies": true }],
    "react/jsx-props-no-spreading": [
      "error",
      {
        "custom": "ignore"
      }
    ]
  }
}
